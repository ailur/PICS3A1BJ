<Window x:Class="BlackJack.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="MainWindow" Width="1024" Height="328">
    <StackPanel Orientation="Vertical">
        <StackPanel Name="Options" Orientation="Horizontal">
            <Button Name="btnAddPlayer">Add player</Button>
            <Button Name="btnRemovePlayer">Remove player</Button>
            <Label>Number of decks:</Label>
            <TextBox Name="txtNumberOfDecks" MinWidth="32" MaxWidth="40"/>
            <Button Name="btnReshuffle">Reshuffle</Button>
        </StackPanel>
        <StackPanel Name="Croupier" Orientation="Horizontal" VerticalAlignment="Top">
            <Image Source="CardGUI/b2fv.png"/>
        </StackPanel>
        <StackPanel Name="Players" Orientation="Horizontal" VerticalAlignment="Bottom">
            <Image Source="CardGUI/s1.png"/>
        </StackPanel>
    </StackPanel>
</Window>
