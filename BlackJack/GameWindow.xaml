<Window x:Class="BlackJack.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="BlackJack" Width="1024" Height="326" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical">
        <StackPanel Name="Options" Orientation="Horizontal">
            <Label Name="lblPlayers">Number of players:</Label>
            <TextBox Name="txtPlayers" MinWidth="32" MaxWidth="40"/>
            <Label Name="lblNumberOfDecks">Number of decks:</Label>
            <TextBox Name="txtNumberOfDecks" MinWidth="32" MaxWidth="40"/>
            <Button Name="btnStart" Click="btnStart_Click">Start</Button>
            <Button Name="btnReshuffle" Click="btnReshuffle_Click">Reshuffle</Button>
        </StackPanel>
        <StackPanel Name="Croupier" Orientation="Horizontal" VerticalAlignment="Top">
            <Image Source="CardGUI/b2fv.png"/>
        </StackPanel>
        <StackPanel Name="Players" Orientation="Horizontal" VerticalAlignment="Bottom">
            <Image Source="CardGUI/s1.png"/>
        </StackPanel>
    </StackPanel>
</Window>